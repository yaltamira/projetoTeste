<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-cookies.min.js"></script>
    <script src="~/Scripts/angularjs/app.js"></script>
    <script src="~/Scripts/angularjs/contato/controller/contato.js"></script>
    <script src="~/Scripts/angularjs/contato/model/contato.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Lista de Contatos", "Index", "Contato", new { area = "Contatos" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Adicionar Contato", "EditarContato", "Contato", new { area = "Contatos" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Meus Dados", "EditarUsuario", "Contato", new { area = "Contatos" }, new { @class = "navbar-brand" })
                    </li>

                </ul>
                <script src="~/Scripts/angularjs/usuario/controller/logado.js"></script>
                <ul class="nav navbar-nav navbar-right" ng-controller="logadoController as logado">
                    <li>
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                {{nome}}
                            </div>
                        </div>
                    </li>
                    @*<li>Email: {{email}}</li>*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>